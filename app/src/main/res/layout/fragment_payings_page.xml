<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PayingsPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/rectangle_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/payYourUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_use"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:fontFamily="@font/sfprodisplaymedium"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/payAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/show_balance"
        android:textSize="60sp"
        android:fontFamily="@font/sfprodisplaymedium"
        android:textStyle="bold"
        android:textColor="@color/dark_blue" />


    <TextView
        android:id="@+id/payDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay_date"
        android:textStyle="bold"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/sfprodisplaysemibolditalic"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <ImageView
        android:id="@+id/payExceedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/danger_icon" />

        <TextView
            android:id="@+id/limitExceedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sfprodisplaybold"
            android:gravity="center"
            android:text="@string/limit_exceed" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_blue"
        android:layout_gravity="center"
        android:text="@string/increase_balance1"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/sfprodisplaybold"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/firstPay"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/cardview_gray"
        android:elevation="2dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_icon"
                android:layout_weight="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="06.03.2023"
                android:layout_weight="1"
                android:fontFamily="@font/sfprodisplayregular"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="140dp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="165kW/S"
                android:layout_weight="0"
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="30632 KW/S"
                android:textColor="@color/dark_blue"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="11.55 AZN"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/secondPay"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/cardview_gray"
        android:elevation="2dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_icon"
                android:layout_weight="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="03.02.2023"
                android:layout_weight="1"
                android:fontFamily="@font/sfprodisplayregular"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="140dp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="274kW/S"
                android:layout_weight="0"
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="30467 KW/S"
                android:textColor="@color/dark_blue"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="19.18 AZN"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdPay"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/cardview_gray"
        android:elevation="2dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/date_icon"
                android:layout_weight="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="05.01.2023"
                android:layout_weight="1"
                android:fontFamily="@font/sfprodisplayregular"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="140dp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="382kW/S"
                android:layout_weight="0"
                android:textColor="@color/dark_blue"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="30193 KW/S"
                android:textColor="@color/dark_blue"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="30.02 AZN"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/light_green"
        android:elevation="2dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addAutoText"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/add_auto"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/paymentCycleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="100dp"
                android:src="@drawable/payment_cycle_icon" />

        </LinearLayout>





    </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>